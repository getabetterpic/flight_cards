<!DOCTYPE html>
<html>
  <head>
    <title>FlightCards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" defer></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body class="blue-grey lighten-5">
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo">Flight Cards</a>
        <a href="#" data-target="slide-out" class="sidenav-trigger" id="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <% if current_user %>
            <li>
              <%= link_to 'Flight Cards', flight_cards_path %>
            </li>
            <li>
              <%= link_to 'Launches', launches_path %>
            </li>
            <li>
              <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign In', new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <ul class="sidenav" id="slide-out">
      <% if current_user %>
        <li>
          <%= link_to 'Flight Cards', flight_cards_path %>
        </li>
        <li>
          <%= link_to 'Launches', launches_path %>
        </li>
        <li>
          <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Sign In', new_user_session_path %>
        </li>
      <% end %>
    </ul>
    <div class="main-container">
      <%= yield %>
    </div>
  </body>
</html>
